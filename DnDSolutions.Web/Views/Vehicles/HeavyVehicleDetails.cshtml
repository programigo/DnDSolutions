@model HeavyVehicleDetailsViewModel

@{
	ViewData["Title"] = "Heavy Vehicle Details";
}

<div>
	@await Html.PartialAsync("_RouteSummaryPartial", Model.RouteSummary)
	<div class="card">
		<div class="card-header">
			Heavy Vehicle Details
		</div>
		<ul class="list-group list-group-flush">
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						<b>Type</b>
					</div>
					<div class="col">
						<b>Make</b>
					</div>
					<div class="col">
						<b>Model</b>
					</div>
				</div>
			</li>
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						@Model.Type
					</div>
					<div class="col">
						@Model.Make
					</div>
					<div class="col">
						@Model.Model
					</div>
				</div>
			</li>
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						<b>Is On Trailer</b>
					</div>
					<div class="col">
						<b>Current Trailer Type</b>
					</div>
					<div class="col">
						<b>Trailer Type</b>
					</div>
				</div>
			</li>
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						@(Model.IsOnTrailer ? "Yes" : "No")
					</div>
					<div class="col">
						@Model.OwnedTrailerType
					</div>
					<div class="col">
						@Model.TrailerType
					</div>
				</div>
			</li>
			@if (Model.Photos.Any())
			{
				<li class="list-group-item">
					<div class="row">
						<div class="col">
							<b>Photos</b>
						</div>
						@foreach (var photo in Model.Photos)
						{
							<div class="col">
								<img src="~/images/@photo.Path" class="card-img">
							</div>
						}
					</div>
				</li>
			}
		</ul>
	</div>
	@if (Model.AdditionalDetails != null)
	{
		@await Html.PartialAsync("_AdditionalDetailsPartial", Model.AdditionalDetails)
	}
</div>