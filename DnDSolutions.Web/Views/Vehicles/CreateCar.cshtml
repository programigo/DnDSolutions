@model CarFormModel

@{
	ViewData["Title"] = "Create Car";
}

<h1>Create new car shipment</h1>

<div class="row">
	<div class="col-md-4">
		<form enctype="multipart/form-data" method="post">
			<div class="form-group">
				<label asp-for="BodyType"></label>
				<select asp-for="BodyType" asp-items="Html.GetEnumSelectList<CarBodyType>()" class="form-control"></select>
				<span asp-validation-for="BodyType" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Make"></label>
				<input asp-for="Make" class="form-control" />
				<span asp-validation-for="Make" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Model"></label>
				<input asp-for="Model" class="form-control" />
				<span asp-validation-for="Model" class="text-danger"></span>
			</div>
			<div class="form-group">
				Car State

				<div class="form-check">
					<input id="convertible-checkbox" class="form-check-input" type="checkbox" value="@((int)CarState.Convertible)" />
					<label class="form-check-label" for="convertible-checkbox">
						Convertible
					</label>
				</div>

				<div class="form-check">
					<input id="modified-checkbox" class="form-check-input" type="checkbox" value="@((int)CarState.Modified)" />
					<label class="form-check-label" for="modified-checkbox">
						Modified
					</label>
				</div>

				<div class="form-check">
					<input id="operable-checkbox" class="form-check-input" type="checkbox" value="@((int)CarState.Operable)" />
					<label class="form-check-label" for="operable-checkbox">
						Operable
					</label>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="PickupLocation"></label>
				<input asp-for="PickupLocation" class="form-control" />
				<span asp-validation-for="PickupLocation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeliveryLocation"></label>
				<input asp-for="DeliveryLocation" class="form-control" />
				<span asp-validation-for="DeliveryLocation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CollectionDateEarliest"></label>
				<input type="date" name="CollectionDateEarliest" required />
				<span asp-validation-for="CollectionDateEarliest" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CollectionDateLatest"></label>
				<input type="date" name="CollectionDateLatest" required />
				<span asp-validation-for="CollectionDateLatest" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeliveryDateEarliest"></label>
				<input type="date" name="DeliveryDateEarliest" required />
				<span asp-validation-for="DeliveryDateEarliest" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeliveryDateLatest"></label>
				<input type="date" name="DeliveryDateLatest" required />
				<span asp-validation-for="DeliveryDateLatest" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col">
						<legend class="col-form-label">
							Service Type
						</legend>
						<div class="form-check">
							@Html.RadioButtonFor(m => m.ServiceType, ServiceType.OpenTransport, new { id = "open-transport-radio-button" })
							<label for="open-transport-radio-button">
								Open Transport
							</label>
						</div>
						<div class="form-check">
							@Html.RadioButtonFor(m => m.ServiceType, ServiceType.EnclosedTransport, new { id = "enclosed-transport-radio-button" })
							<label for="enclosed-transport-radio-button">
								Enclosed Transport
							</label>
						</div>
					</div>
				</div>
				<span asp-validation-for="ServiceType" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Photos"></label>
				<div class="custom-file">
					<input multiple asp-for="Photos" class="form-control custom-file-input" />
					<label class="custom-file-label">Choose File...</label>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="AdditionalDetails"></label>
				<textarea asp-for="AdditionalDetails" class="form-control"></textarea>
				<span asp-validation-for="AdditionalDetails" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary">Create</button>
		</form>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
	@await Html.PartialAsync("_FileInputValidationScriptsPartial")
}