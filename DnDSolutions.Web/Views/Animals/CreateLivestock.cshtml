@model LivestockFormModel

@{
	ViewData["Title"] = "Create Livestock";
}

<h1>Create new Livestock delivery</h1>

<div class="row">
	<div class="col-md-4">
		<form enctype="multipart/form-data" method="post">
			<div class="form-group">
				<label asp-for="Count"></label>
				<input type="number" min="1" step="1" asp-for="Count" class="form-control" />
				<span asp-validation-for="Count" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Title"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Breed"></label>
				<input asp-for="Breed" class="form-control" />
				<span asp-validation-for="Breed" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="TotalWeight"></label>
				<input type="number" placeholder="kg" asp-for="TotalWeight" class="form-control" />
				<span asp-validation-for="TotalWeight" class="text-danger"></span>
			</div>
			@await Html.PartialAsync("_DeliveryInsurancePartial", Model)
			<div class="form-group">
				<div class="row">
					<div class="col">
						<legend class="col-form-label">
							Has all vaccinations?
						</legend>
						<div class="form-check">
							@Html.RadioButtonFor(m => m.HasAllVaccinations, true, new { id = "has-vaccinations-radio-button" })
							<label for="has-vaccinations-radio-button">
								Yes
							</label>
						</div>
						<div class="form-check">
							@Html.RadioButtonFor(m => m.HasAllVaccinations, false, new { id = "has-not-vaccinations-radio-button" })
							<label for="has-not-vaccinations-radio-button">
								No
							</label>
						</div>
					</div>
				</div>
				<span asp-validation-for="HasAllVaccinations" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col">
						<legend class="col-form-label">
							Has all tags?
						</legend>
						<div class="form-check">
							@Html.RadioButtonFor(m => m.HasAllTags, true, new { id = "has-tags-radio-button" })
							<label for="has-tags-radio-button">
								Yes
							</label>
						</div>
						<div class="form-check">
							@Html.RadioButtonFor(m => m.HasAllTags, false, new { id = "has-not-tags-radio-button" })
							<label for="has-not-tags-radio-button">
								No
							</label>
						</div>
					</div>
				</div>
				<span asp-validation-for="HasAllTags" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col">
						<legend class="col-form-label">
							Has specific needs?
						</legend>
						<div class="form-check">
							@Html.RadioButtonFor(m => m.HasSpecificNeeds, true, new { id = "has-needs-radio-button" })
							<label for="has-needs-radio-button">
								Yes
							</label>
						</div>
						<div class="form-check">
							@Html.RadioButtonFor(m => m.HasSpecificNeeds, false, new { id = "has-not-needs-radio-button" })
							<label for="has-not-needs-radio-button">
								No
							</label>
						</div>
					</div>
				</div>
				<span asp-validation-for="HasSpecificNeeds" class="text-danger"></span>
			</div>
			<div class="form-group">

				<div class="row">
					<div class="col">
						<legend class="col-form-label">
							Is in coral?
						</legend>
						<div class="form-check">
							@Html.RadioButtonFor(m => m.IsInCorral, true, new { id = "has-corral-radio-button" })
							<label for="has-corral-radio-button">
								Yes
							</label>
						</div>
						<div class="form-check">
							@Html.RadioButtonFor(m => m.IsInCorral, false, new { id = "has-not-corral-radio-button" })
							<label for="has-not-corral-radio-button">
								No
							</label>
						</div>
					</div>
				</div>
				<span asp-validation-for="IsInCorral" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PickupLocation"></label>
				<input asp-for="PickupLocation" class="form-control" />
				<span asp-validation-for="PickupLocation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeliveryLocation"></label>
				<input asp-for="DeliveryLocation" class="form-control" />
				<span asp-validation-for="DeliveryLocation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CollectionDate"></label>
				<input type="date" name="CollectionDate" required />
				<span asp-validation-for="CollectionDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeliveryDate"></label>
				<input type="date" name="DeliveryDate" required />
				<span asp-validation-for="DeliveryDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Photos"></label>
				<div class="custom-file">
					<input multiple asp-for="Photos" class="form-control custom-file-input" />
					<label class="custom-file-label">Choose File...</label>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="AdditionalDetails"></label>
				<textarea asp-for="AdditionalDetails" class="form-control"></textarea>
				<span asp-validation-for="AdditionalDetails" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary">Create</button>
		</form>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
	@await Html.PartialAsync("_FileInputValidationScriptsPartial")
}