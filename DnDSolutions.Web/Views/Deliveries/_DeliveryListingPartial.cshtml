@model DeliveryItem

<div class="row no-gutters">
	<div class="col-md-4">
		@if (Model.Photos.Any())
		{
			<img src="~/images/@Model.Photos.First().Path" class="card-img">
		}
		else
		{
			<img src="~/images/no-image-icon-11.png" class="card-img">
		}
	</div>
	<div class="col-md-8">
		<div class="card-body">
			<p class="card-text">Pickup location: @Model.PickupLocation</p>
			<p class="card-text">Delivery location: @Model.DeliveryLocation</p>
			<p class="card-text">Delivery date: @Model.DeliveryDate</p>
			<p class="card-text">Created on: @Model.CreateDate</p>
			<p class="card-text">By: @Model.User.UserName</p>
		</div>
	</div>
</div>
