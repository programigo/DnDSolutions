@model OfficeFormModel

@{
	ViewData["Title"] = "Create Office";
}

<h1>Create new Office delivery</h1>

<div class="row">
	<div class="col-md-4">
		<form enctype="multipart/form-data" method="post">
			<div class="form-group">
				<label asp-for="CollectionFloor"></label>
				<input type="number" min="0" max="50" step="1" placeholder="count" asp-for="CollectionFloor" class="form-control" />
				<span asp-validation-for="CollectionFloor" class="text-danger"></span>
			</div>
			@await Html.PartialAsync("_DeliveryInsurancePartial", Model)
			<div class="form-group">
				<div class="row">
					<div class="col">
						<legend class="col-form-label">
							Does the collection floor have elevator?
						</legend>
						<div class="form-check">
							@Html.RadioButtonFor(o => o.HasCollectionFloorElevator, true, new { id = "has-collection-floor-elevator-radio-button" })
							<label for="has-collection-floor-elevator-radio-button">
								Yes
							</label>
						</div>
						<div class="form-check">
							@Html.RadioButtonFor(o => o.HasCollectionFloorElevator, false, new { id = "has-no-collection-floor-elevator-radio-button" })
							<label for="has-no-collection-floor-elevator-radio-button">
								No
							</label>
						</div>
					</div>
				</div>
				<span asp-validation-for="HasCollectionFloorElevator" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeliveryFloor"></label>
				<input type="number" min="0" max="50" step="1" placeholder="count" asp-for="DeliveryFloor" class="form-control" />
				<span asp-validation-for="DeliveryFloor" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col">
						<legend class="col-form-label">
							Does the delivery floor have elevator?
						</legend>
						<div class="form-check">
							@Html.RadioButtonFor(o => o.HasDeliveryFloorElevator, true, new { id = "has-delivery-floor-elevator-radio-button" })
							<label for="has-delivery-floor-elevator-radio-button">
								Yes
							</label>
						</div>
						<div class="form-check">
							@Html.RadioButtonFor(o => o.HasDeliveryFloorElevator, false, new { id = "has-no-delivery-floor-elevator-radio-button" })
							<label for="has-no-delivery-floor-elevator-radio-button">
								No
							</label>
						</div>
					</div>
				</div>
				<span asp-validation-for="HasDeliveryFloorElevator" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col">
						<legend class="col-form-label">
							Has disassembly items?
						</legend>
						<div class="form-check">
							@Html.RadioButtonFor(o => o.HasDisassemblyItems, true, new { id = "has-disassembly-items-radio-button" })
							<label for="has-disassembly-items-radio-button">
								Yes
							</label>
						</div>
						<div class="form-check">
							@Html.RadioButtonFor(o => o.HasDisassemblyItems, false, new { id = "has-no-disassembly-items-radio-button" })
							<label for="has-no-disassembly-items-radio-button">
								No
							</label>
						</div>
					</div>
				</div>
				<span asp-validation-for="HasDisassemblyItems" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col">
						<legend class="col-form-label">
							Has reassembly items?
						</legend>
						<div class="form-check">
							@Html.RadioButtonFor(o => o.HasReassemblyItems, true, new { id = "has-reassembly-items-radio-button" })
							<label for="has-reassembly-items-radio-button">
								Yes
							</label>
						</div>
						<div class="form-check">
							@Html.RadioButtonFor(o => o.HasReassemblyItems, false, new { id = "has-no-reassembly-items-radio-button" })
							<label for="has-no-reassembly-items-radio-button">
								No
							</label>
						</div>
					</div>
				</div>
				<span asp-validation-for="HasReassemblyItems" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Title"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PickupLocation"></label>
				<input asp-for="PickupLocation" class="form-control" />
				<span asp-validation-for="PickupLocation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeliveryLocation"></label>
				<input asp-for="DeliveryLocation" class="form-control" />
				<span asp-validation-for="DeliveryLocation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CollectionDate"></label>
				<input type="date" name="CollectionDate" required />
				<span asp-validation-for="CollectionDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeliveryDate"></label>
				<input type="date" name="DeliveryDate" required />
				<span asp-validation-for="DeliveryDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Photos"></label>
				<div class="custom-file">
					<input multiple asp-for="Photos" class="form-control custom-file-input" />
					<label class="custom-file-label">Choose File...</label>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="AdditionalDetails"></label>
				<textarea asp-for="AdditionalDetails" class="form-control"></textarea>
				<span asp-validation-for="AdditionalDetails" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary">Create</button>
		</form>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
	@await Html.PartialAsync("_FileInputValidationScriptsPartial")
}